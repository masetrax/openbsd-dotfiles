#!/bin/sh

FG='#444444'
BG='#EAE5CE'
FONT='Hack:size=10'
WIDTH='300'
HEIGHT='67'

Volume(){
	v=$(sndioctl -n output.level | awk '{print int ($0*100) '})
		echo "Vol $v%"
		}

		BattStat(){
			battery=`apm -l`
				battcharge=`apm -a`
					if [ $battcharge -eq 1 ]; then
							echo "AC ${battery}%"
								elif [ $battery -eq 100 ]; then
										echo "Battery ${battery}%"
											elif [ $battery -le 25 ]; then
													echo "Battery ${battery}%"
														else
																echo "Battery ${battery}%"
																	fi
																	}


																	while true; do
																		sleep 1
																			echo "$(Volume)  $(BattStat)" 
																			done | dzen2 -p -fn $FONT -bg $BG -fg $FG -ta c -w $WIDTH -h $HEIGHT -y 112 -x 1592 -e 'button2=;'
