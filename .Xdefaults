xterm.vt100.faceName: Hack
xterm*faceSize: 8
xterm*loginshell: true
xterm*savelines: 2000
!xterm*foreground: rgb:EE/EE/EE
!xterm*background: rgb:1E/1E/1E
!xterm*color0: rgb:66/66/66
xterm*internalBorderWidth: 10
! black
!xterm*color1: rgb:AA/66/66 ! red
!xterm*color2: rgb:66/AA/66 ! green
!xterm*color3: rgb:BF/B0/54 ! olive
!xterm*color4: rgb:66/66/AA ! navy
!xterm*color5: rgb:9B/44/9B ! purple
!xterm*color6: rgb:54/B0/BF ! teal
!xterm*color7: rgb:66/66/66 ! silver
!xterm*color8: rgb:33/33/33 ! grey
!xterm*color9: rgb:AA/66/66 ! red
!xterm*color10: rgb:66/AA/66 ! green
!xterm*color11: rgb:BF/B0/54 ! yellow
!xterm*color12: rgb:66/66/AA ! blue
!xterm*color13: rgb:AA/66/66 ! fuchsia
!xterm*color14: rgb:66/66/AA ! aqua
!xterm*color15: rgb:FF/FF/FF ! white
!
xterm*rightScrollBar: false
xterm*ScrollBar: false
xterm*scrollTtyOutput: true
!
! xterm.vt100.locale: false
! xterm.vt100.utf8: true
! xterm.vt100.geometry: 120x40
xterm.vt100.internalBorder: 20
xterm*metaSendsEscape: true
xterm*eightBitinput: false

! xclock settings
XClock*.update:			1
XClock*.analog:			False
XClock*.render:			True
XClock*.padding:		20
XClock*.face:			Hack:size=10
XClock*.strftime:		%a %b %d  %H:%M:%S
XClock*.foreground:		#444444
XClock*.background:		#EAE5CE


! xconsole settings
XConsole*foreground:		#EEEEEE
XConsole*background:		#1E1E1E
XConsole*borderwidth:		0

! cursor theme
Xcursor.theme:			Paper
Xcursor.size:			10

! a muted palette for athena things like xterm, xfontsel, etc.
#define BG			#eae5ce
#define FG			#444444
*.background:			BG
*.foreground:			FG

*.scrollbar.background:		BG
*.scrollbar.foreground:		FG
*.scrollBar.minimumThumb:	50
*.scrollbar.width:		10

*.borderColor:			BG

